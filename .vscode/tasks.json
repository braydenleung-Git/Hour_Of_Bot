{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build DPP file",
            "command":"/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-ldpp",
                "-fdiagnostics-color=always",
                "-fansi-escape-codes",
                "${file}",
                "-o",
                "${workspaceFolder}/Build_Output/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
                /*"linux" : {
                    "command": "usr/bin/g++",
                    "args": [
                        "-std=c++17",
                        "-ldpp",
                        "-fdiagnostics-color=always",
                        "-fansi-escape-codes",
                        "-g", 
                        "${file}", 
                        "-o", 
                        ""${workspaceFolder}/Build_Output/${fileBasenameNoExtension}"
                    ],
                },*/
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "isBackground": false,
        },
        {
            "type": "shell",
            "label": "kill previous terminal window",
            "command": "osascript",
            "args": [
                "-e",
                "'tell application \"Terminal\" to close (every window whose frontmost is true)'"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
        "label": "Build",
        "dependsOn": [
            "Build DPP file",
        ]
    }
    ],

}